{
	"class": "RelativeLayout",
	"layout_width": "match_parent",
	"layout_height": "match_parent",
	"children": [
        {
            "class": "RelativeLayout",
            "layout_width": "match_parent",
            "layout_height": "40dp",
            "layout_marginTop": "8dp",
            "layout_marginBottom": "8dp",
            "id":"_button",
            "children": [
                {
                    "class": "Button",
                    "layout_width": "wrap_content",
                    "layout_height": "wrap_content",
                    "layout_centerInParent": "true",
					"action": "@selector/add100Pizza",
                    "background": {
                        "class": "shape",
                        "shape": "rectangle",
                        "children": [
                            {
                                "class": "stroke",
                                "width": "2dp",
                                "color": "#5b0041"
                            },
                            {
                                "class":"corners",
                                "radius":"6dp",
                            },
                            {
                                "class":"solid",
                                "color":"#00bff4"
                            }
                        ]
                    },
                    "padding": "10dp",
					"textColor": "#FFF",
					"textStyle": "bold",
					"textSize": "10dp",
                    "text": "Add 100 Pizza"
                }
            ]
        },
        {
        	"class": "TextView",
        	"layout_width": "wrap_content",
        	"layout_height": "match_parent",
            "layout_below": "_button",
            "layout_marginLeft": "6dp",
            "layout_marginRight": "6dp",
            "lineSpacingExtra": "2",
        	"ellipsize":"middle",
        	"lines": "-1",
        	"textColor": "#000",
        	"textSize": "10dp",
        	"text": "(Add 100 more Pizza e.g. Pizza_1000,Pizza_1001,Pizza_1002...Pizza_1099)",
        },


    ]
}
